<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="rootPane" prefHeight="452.0" prefWidth="829.0" stylesheets="@../css/bootstrap3.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.ui.resultDialog.ResultDialogView">
   <children>
       <SplitPane dividerPositions="0.3143350604490501" prefHeight="400.0" prefWidth="897.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
          <items>
              <!-- left -->
              <VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8">
                  <padding>
                      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                  </padding>
                 <children>
                     <VBox prefHeight="200.0" prefWidth="100.0">
                        <children>
                            <Label text="Feuerwehr:" />
                            <TextField fx:id="fireDepartmentTextField" />
                            <Label fx:id="fireDepartmentErrorLabel" text="Label" textFill="RED" visible="false" />
                        </children>
                     </VBox>
                     <VBox prefHeight="200.0" prefWidth="100.0">
                        <children>
                            <Label text="Zeit:" />
                            <TextField fx:id="timeTextField" maxWidth="75.0" />
                            <Label fx:id="timeErrorLabel" text="Label" textFill="RED" visible="false" />
                        </children>
                     </VBox>
                     <VBox prefHeight="200.0" prefWidth="100.0">
                        <children>
                            <Label text="Fehler:" />
                            <TextField fx:id="mistakePointsTextField" maxWidth="50.0" />
                            <Label fx:id="mistakePointsErrorLabel" text="Label" textFill="RED" visible="false" />
                        </children>
                     </VBox>
                 </children>
              </VBox>
      
              <!-- right -->
              <VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8">
                  <padding>
                      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                  </padding>
         <children>
                     <Label text="Bild:" />
                     <Pane fx:id="imageWrapper" maxHeight="378.0" maxWidth="890.0" prefHeight="292.0" prefWidth="890.0" style="-fx-border-color: black; -fx-max-height: 300px; -fx-max-width: 500px;">
                        <children>
                            <ImageView fx:id="image" fitHeight="291.0" fitWidth="600.0" layoutY="8.0" pickOnBounds="true" preserveRatio="true" />
                        </children>
                     </Pane>
                     <Label fx:id="imageErrorLabel" text="Label" textFill="RED" visible="false" />
                     <Button onAction="#chooseImage" text="Bild auswählen" />
         </children>
              </VBox>
          </items>
       </SplitPane>
   
       <!-- buttons -->
       <HBox alignment="CENTER_RIGHT" prefHeight="0.0" prefWidth="600.0">
           <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
           </padding>
      <children>
              <Button mnemonicParsing="false" onAction="#apply" styleClass="success" text="übernehmen">
                  <HBox.margin>
                      <Insets left="10.0" right="10.0" />
                  </HBox.margin>
                  <graphic>
                      <ImageView>
                          <Image url="@/icons/check.png" backgroundLoading="true"/>
                      </ImageView>
                  </graphic>
              </Button>
              <Button mnemonicParsing="false" onAction="#cancel" styleClass="danger" text="abbrechen">
                  <HBox.margin>
                      <Insets left="10.0" right="10.0" />
                  </HBox.margin>
                  <graphic>
                      <ImageView>
                          <Image url="@/icons/cross.png" backgroundLoading="true"/>
                      </ImageView>
                  </graphic>
              </Button>
      </children>
       </HBox>
   </children>
</VBox>
