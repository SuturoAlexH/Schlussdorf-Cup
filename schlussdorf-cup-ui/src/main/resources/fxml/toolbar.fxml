<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<FlowPane fx:id="root" alignment="CENTER" hgap="50.0" prefHeight="56.0" prefWidth="600.0" BorderPane.alignment="CENTER" stylesheets="@../css/bootstrap3.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8"
          fx:controller="org.openjfx.ui.toolbar.ToolbarView">
    <children>
        <Button fx:id="newEntryButton" styleClass="success" onAction="#addNewResult" text="hinzufügen">
            <graphic>
                <ImageView>
                    <Image url="@/icons/plus.png" backgroundLoading="true"/>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="deleteButton" styleClass="danger" onAction="#deleteResult" text="löschen" >
            <graphic>
                <ImageView>
                    <Image url="@/icons/delete.png" backgroundLoading="true"/>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="editButton" styleClass="primary" onAction="#editResult" text="bearbeiten" >
            <graphic>
                <ImageView>
                    <Image url="@/icons/edit.png" backgroundLoading="true"/>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="imageButton" styleClass="primary" onAction="#showImage" text="Bild anzeigen" >
            <graphic>
                <ImageView>
                    <Image url="@/icons/image.png" backgroundLoading="true"/>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="certificateButton" styleClass="primary" onAction="#createCertificates" text="Urkunden erzeugen" >
            <graphic>
                <ImageView>
                    <Image url="@/icons/certificate.png" backgroundLoading="true"/>
                </ImageView>
            </graphic>
        </Button>

    </children>
</FlowPane>